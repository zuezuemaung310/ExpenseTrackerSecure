@model ExpenseTracker.Models.User

@{
    ViewData["Title"] = "Profile";
}

<div class="row">
    <div class="col-md-6 col-lg-6 offset-lg-3 card p-5 mt-3 bg-light">
            <div class="p-2 mb-2">
                <a asp-action="EditProfile" asp-controller="Account" class="btn btn-primary ms-2">Edit Profile</a>
                <a asp-action="ChangePassword" asp-controller="Account" class="btn btn-info my-2">Change Password</a>
                 <a asp-action="Index" asp-controller="Dashboard" class="btn btn-outline-primary">Back to Dashboard</a>            
            </div>
                <h3 class="text-dark pb-3">@Model.Username's Profile</h3>
                <dl class="row text-dark text-start">
                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.Email)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Email)
                    </dd>
                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.Phone)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Phone)
                    </dd>
                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.Address)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Address)
                    </dd>
                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.Note)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Note)
                    </dd>
                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.ImagePath)
                    </dt>
                    <dd class="col-sm-8">
                        @if (!string.IsNullOrEmpty(Model.ImagePath))
                        {
                            <img src="@Model.ImagePath" alt="User Image" class="img-thumbnail" width="100" height="100" />
                        }
                        else
                        {
                            <p>No image available</p>
                        }
                    </dd>
                </dl>
            </div>
    </div>
</div>

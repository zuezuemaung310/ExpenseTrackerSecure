@model ExpenseTracker.Models.User

@{
    ViewData["Title"] = "Profile";
}

<div class="container mt-3">
    <div class="row justify-content-center">
        <!-- Profile Card -->
        <div class="col-md-6 col-lg-4">     
            <a asp-action="Index" asp-controller="Dashboard" class="text-black  text-decoration-none pt-3 text-start">
                <i class="fa-solid fa-arrow-left fa-lg"></i>
            </a>          
            <div class="card">
                <div class="card-header">
                    @Model.Username's Profile
                </div>

                <!-- Profile Image and Username -->
                <div class="card-body text-center">
                    @if (!string.IsNullOrEmpty(Model.ImagePath))
                    {
                        <img src="@Model.ImagePath" alt="User Image" class="img-fluid rounded-circle" style="width: 120px; height: 120px; object-fit: cover;">
                    }
                    else
                    {
                        <img src="https://via.placeholder.com/120" alt="User Image" class="img-fluid rounded-circle" />
                    }

                    <h5 class="mt-3">@Model.Username</h5>
                </div>

                <!-- Profile Details -->
                <div class="card-body">
                    <dl class="row text-muted text-start">
                        <dt class="col-sm-4">Email</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>

                        <dt class="col-sm-4">Phone</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Phone)</dd>

                        <dt class="col-sm-4">Address</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Address)</dd>

                        <dt class="col-sm-4">Note</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Note)</dd>
                    </dl>
                   
                </div>
            </div>
        </div>
    </div>
</div>

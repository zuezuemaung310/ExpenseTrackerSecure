@model ExpenseTracker.Models.User

@{
    ViewData["Title"] = "Profile";
}

<div class="row">
    <div class="col-md-4 col-lg-4 offset-4 ">
        <div class="row">
            <div class="col-md-1 py-2">
                <a asp-action="Index" asp-controller="Dashboard" class="text-start text-black text-decoration-none"><i class="fa-solid fa-arrow-left fa-lg"></i></a>
            </div>
            <div class="col-md-11 py-2">
                <a asp-action="EditProfile" asp-controller="Account" class="text-black text-decoration-none d-flex justify-content-end fa-lg"><i class="fa-solid fa-pen-to-square"></i></a>
            </div>
        </div>
       
                <h3 class="text-dark py-3 text-center">@Model.Username's Profile</h3>
                <dl class="row text-dark text-start">
                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.Email)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Email)
                    </dd>
                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.Phone)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Phone)
                    </dd>
                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.Address)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Address)
                    </dd>
                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.Note)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Note)
                    </dd>
                    <dt class="col-sm-3">
                        Image
                    </dt>
                    <dd class="col-sm-8">
                        @if (!string.IsNullOrEmpty(Model.ImagePath))
                        {
                            <img src="@Model.ImagePath" alt="User Image" class="img-thumbnail" width="100" height="100" />
                        }
                        else
                        {
                            <p>No image available</p>
                        }
                    </dd>
                </dl>
            </div>
    </div>
</div>

@if (TempData["LoginFail"] != null)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        @TempData["LoginFail"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (TempData["VerifyError"] != null)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        @TempData["VerifyError"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (TempData["VerifySuccess"] != null)
{
    <div class="alert alert-info alert-dismissible fade show" role="alert">
        @TempData["VerifySuccess"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
<div class="col-4 offset-4">
    <h4 class="text-center text-dark py-2">Login</h4>
    <hr />
    <form asp-action="Login" method="post" class="container mt-4 p-4 border rounded bg-light">
        <div class="mb-3">
            <label for="username" class="form-label">Username</label>
            <input type="text" name="username" id="username" class="form-control"  />
        </div>
        <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input type="password" name="password" id="password" class="form-control"  />
        </div>
        <div class="form-check">
            <input type="checkbox" name="rememberMe" class="form-check-input" id="rememberMe" />
            <label class="form-check-label" for="rememberMe">Remember Me</label>
        </div>
        <div class="text-center float-end">
            <a asp-action="ForgotPassword" asp-controller="Account" class="btn btn-link">Forgot Password?</a>
        </div>
        @* @if (!string.IsNullOrEmpty(ViewData["LoginError"]?.ToString())) *@
        @* { *@
        @*     <div class="alert alert-danger"> *@
        @*         @ViewData["LoginError"] *@
        @*     </div> *@
        @* } *@
        <div class="text-center">
            <button type="submit" class="btn btn-primary w-100">Login</button>
        </div>
    </form>
</div>

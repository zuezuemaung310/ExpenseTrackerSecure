@model ExpenseTracker.Models.RegisterViewModel

<div class="row">
    <div class="col-4 offset-2">
        <h2 class="text-dark fw-bold pt-4">Create an account</h2>
        <form asp-action="Register" method="post" class="container p-3">
            <div class="mb-2">
                <label asp-for="Username" class="form-label">Username</label>
                <input asp-for="Username" class="form-control" placeholder="Username"/>
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="mb-2">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" class="form-control" placeholder="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="mb-2">
                <label asp-for="Password" class="form-label">Password</label>
                <input asp-for="Password" type="password" class="form-control" placeholder="*******" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="mb-2">
                <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
                <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Retype Your Password Again" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-primary w-100">Register</button>
            </div>
            <p class="text-center mt-2">
                Already have an account? <a asp-controller="Account" asp-action="Login" class="text-decoration-none">Login</a>
            </p>
        </form>
    </div>
    <div class="col-4 offset-1 d-flex justify-content-center align-items-center p-2">
        <img src="~/images/registration.gif" alt="Register" width="400" height="400"/>
    </div>
</div>
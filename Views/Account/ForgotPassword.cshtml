@model ExpenseTracker.Models.ForgotPasswordModel

<div class="row">
    <div class="col-4 offset-4 text-center pt-3">
        <h3 class="text-center">Forgot Password</h3>

        @if (Model?.EmailSent == true)
        {
            <p class="text-success text-center">A password reset link has been sent to your email.</p>
        }
        else
        {
            <form asp-action="ForgotPassword" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group mb-3 text-start">
                    <label asp-for="Email" ></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div>
                    <button type="submit" class="btn btn-primary my-3">Send Reset Link</button>
                    <a asp-controller="Account" asp-action="Login" class="btn btn-outline-primary">Login</a>
                </div>
            </form>
        }
    </div>
</div>

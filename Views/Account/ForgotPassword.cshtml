@model ExpenseTracker.Models.ForgotPasswordModel

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="row">
    <h3 class="pb-3 text-center pt-5">Forgot Password</h3>
    <div class="col-4 offset-2 pt-3  d-flex justify-content-center align-items-center p-2 vh-300">
        

        @if (Model?.EmailSent == true)
        {
            <p class="text-success text-center">A password reset link has been sent to your email.</p>
        }
        else
        {
            <form asp-action="ForgotPassword" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group mb-2 text-start">
                    <label asp-for="Email" ></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div>
                    <button type="submit" class="btn btn-primary my-3">Send Reset Link</button>
                    
                </div>
                <p> Back to <a asp-controller="Account" asp-action="Login">Login</a></p>
            </form>
        }
    </div>
    <div class="col-4 offset-1 d-flex justify-content-center align-items-center p-2">
        <img src="~/images/forgot.jpg" alt="Forgot Password" width="400" height="400" />
    </div>
</div>

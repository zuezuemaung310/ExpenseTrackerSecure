@model ExpenseTracker.Models.User

@{
    ViewData["Title"] = "Edit Profile";
}

<div class="row">
    <div class="col-md-4 offset-4">

        <div class="row">
            <div class="col-md-1 pt-4">
                <a asp-action="Profile" class="text-start text-black text-decoration-none"><i class="fa-solid fa-arrow-left fa-lg"></i></a>
            </div>
            <div class="col-md-11 py-2">
                <h2 class="text-dark text-center my-2">Update Profile</h2>
            </div>
        </div>

        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <!-- Hidden UserId Field -->
            <input type="hidden" asp-for="UserId" />

            <div class="form-group mb-3">
                <label asp-for="Email" class="form-label">Email</label>
                <input type="email" class="form-control form-control" asp-for="Email" required />
            </div>

            <div class="form-group mb-3">
                <label asp-for="Phone" class="form-label ">Phone</label>
                <input type="text" class="form-control form-control" asp-for="Phone" />
            </div>

            <div class="form-group mb-3">
                <label asp-for="Address" class="form-label">Address</label>
                <input type="text" class="form-control form-control" asp-for="Address" />
            </div>

            <div class="form-group mb-3">
                <label asp-for="Note" class="form-label">Note</label>
                <input type="text" class="form-control form-control" asp-for="Note" />
            </div>

            <div class="form-group mb-3">
                <label asp-for="Image" class="form-label ">Profile Image</label>
                <div class="mb-3">
                    <img src="@Url.Content(Model.ImagePath)" alt="Profile Image" class="img-thumbnail" width="100" height="100" />
                </div>
                <input type="file" class="form-control form-control" asp-for="Image" />
                <input type="hidden" name="ImagePath" value="@Model.ImagePath" />
                <span asp-validation-for="Image" class="text-danger small"></span>
            </div>

            <div class="form-group mb-3 d-flex justify-content-center">
                <button type="submit" class="btn btn-primary px-4 rounded">Update</button>
            </div>
        </form>
    </div>
</div>
